<odoo>
    <!-- Vista de Ã¡rbol -->
    <record id="view_hr_prestamo_tree" model="ir.ui.view">
        <field name="name">hr.prestamo.tree</field>
        <field name="model">hr.prestamo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>  
                <field name="monto"/> 
                <field name="fecha"/> 
                <field name="saldo"/>
                <field name="restante"/>

            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_hr_prestamo_form" model="ir.ui.view">
        <field name="name">hr.prestamo.form</field>
        <field name="model">hr.prestamo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>  
                        <field name="monto"/>
                        <field name="nro_cuotas"/>
                        <field name="cuota"/>
                        <field name="fecha"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>